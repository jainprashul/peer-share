{
  "name": "peer-share",
  "version": "1.0.0",
  "private": true,
  "description": "PeerShare - A peer-to-peer file sharing application",
  "workspaces": [
    "server",
    "shared",
    "client"
  ],
  "scripts": {
    "bootstrap": "yarn install",
    "clean": "lerna clean",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "dev:client": "lerna run dev --scope=@peer-share/client",
    "dev:server": "lerna run dev --scope=@peer-share/server",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "version": "lerna version",
    "publish": "lerna publish",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "exec": "lerna exec",
    "run": "lerna run",
    "add": "lerna add",
    "link": "lerna link",
    "install:all": "yarn install && lerna bootstrap",
    "fresh": "yarn clean && yarn install:all"
  },
  "devDependencies": {
    "lerna": "^8.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
