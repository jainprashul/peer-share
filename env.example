# Railway Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000


# WebSocket Configuration (now uses same port as HTTP)
WS_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://your-app.railway.app
CORS_CREDENTIALS=true
ALLOWED_ORIGINS=https://your-app.railway.app,https://your-client.railway.app

# Logging
LOG_LEVEL=info
LOG_FILE=server.log
LOG_DIR=./logs
DISABLE_FILE_LOGGING=false

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Database (if you add one later)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (if you add caching)
# REDIS_URL=redis://user:password@host:port

# External Services
# PEERJS_API_KEY=your-peerjs-api-key
# PEERJS_HOST=your-peerjs-host
# PEERJS_PORT=443
# PEERJS_PATH=/peerjs

# Monitoring
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=false
ENABLE_WEBSOCKET_LOGGING=false
 
 # ==============================================================================
# üîë AUTHENTICATION & SECRETS
# ==============================================================================

# JWT Secret Key (Required: Minimum 32 characters for security)
JWT_SECRET=your_32_character_or_longer_secret_key_here_for_signing_tokens

# ==============================================================================
# üíæ MONGODB CONNECTION
# ==============================================================================

# MongoDB Atlas/Cluster Username
MONGO_USERNAME=yourMongoDbUsername

# MongoDB Atlas/Cluster Password
MONGO_PASSWORD=yourMongoDbPassword

# The specific database name to use within the cluster
MONGO_DB_NAME=peer_share_db

# The cluster connection string URL (e.g., cluster0.abcde.mongodb.net)
MONGO_CLUSTER_URL=mongo_db_cluster

# NOTE: Your full connection string will typically be:
# mongodb+srv://${MONGO_USERNAME}:${MONGO_PASSWORD}@${MONGO_CLUSTER_URL}/${MONGO_DB_NAME}?retryWrites=true&w=majority


# ==============================================================================
# üåê GOOGLE OAUTH CONFIGURATION
# ==============================================================================

# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_ICLIENT_ID= clientId

# Google OAuth Client Secret (from Google Cloud Console)
GOOGLE_CLENT_SECRET= secret

# The authorized redirect URL configured in Google Cloud Console
# (Must match the exact route in your Express app,
 e.g., http://localhost:5000/auth/google/cb)
GOOGLE_REDIRECT_URI=https://peer-share.up.railway.app/auth/cb/google  or http://localhost:5173/auth/cb/google