{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "client",
    "server",
    "shared"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "stream": true,
  "concurrency": 1
}
